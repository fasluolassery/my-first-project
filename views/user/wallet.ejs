                        <h3 class="cart-page-title">Your Balance: <%= user.balance %></h3>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <form action="#">
                                    <div class="table-content table-responsive cart-table-content">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Time</th>
                                                    <th>Amount</th>
                                                    <!-- <th>Qty</th> -->
                                                    <th>Type</th>
                                                    <!-- <th>Action</th> -->
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (typeof transactions !='undefined' ) { %>
                                                    <% transactions.forEach(val=> { %>
                                                        <tr>
                                                            <!-- <td class="product-thumbnail">
                                                                <a href="#"><img class="img-responsive ml-15px"
                                                                        src="<%= val %>" alt="" /></a>
                                                            </td> -->
                                                            <td class="product-name"><a href="#"><%= val.createdAt.toLocaleDateString('en-GB') %> </a></td>
                                                            <td class="product-price-cart">
                                                                <span class="amount">
                                                                    <% 
                                                                        let timeString = val.createdAt.toLocaleTimeString('en-GB', {
                                                                            hour: '2-digit',
                                                                            minute: '2-digit',
                                                                            second: undefined,
                                                                            hour12: true
                                                                        });
                                                                        // Adjust for midnight and noon
                                                                        if (timeString.startsWith('00')) {
                                                                            timeString = timeString.replace('00', '12');
                                                                        }
                                                                    %>
                                                                    <%= timeString %>
                                                                </span>
                                                            </td>
                                                            <td class="product-name"><a href style="font-family: sans-serif;">â‚¹<%= val.amount %></a></td>
                                                            <td class="product-name"><a href="#"><%= val.type%> </a></td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } %>

                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Wishlist Area End -->
                <!-- Footer Area Start -->
                <%- include('../layout/userFooter.ejs') %>

                <!-- Footer Area End -->
        </div>
