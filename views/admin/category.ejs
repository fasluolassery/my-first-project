                        </div>
                    </form>
                </div>
                <div class="col-nav">
                    <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"><i
                            class="material-icons md-apps"></i></button>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link btn-icon darkmode" href="#"> <i
                                    class="material-icons md-nights_stay"></i> </a>
                        </li>
                    </ul>
                </div>
            </header>
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Manage Categories</h2>
                        <p>edit existing categories, create new ones.</p>
                    </div>
                    <div>
                        <input type="text" placeholder="Search Categories" class="form-control bg-white" />
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <form id="categoryForm">
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Name</label>
                                        <div id="errorMessagesName" class="text-danger"></div>
                                        <input type="text" placeholder="Type here" class="form-control"
                                            id="categoryName" required />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <div id="errorMessagesDescription" class="text-danger"></div>
                                        <textarea placeholder="Type here" class="form-control" id="categoryDescription"
                                            required></textarea>
                                    </div>
                                    <div class="d-grid">
                                        <div id="errorMessages" class="text-danger"></div>
                                        <button type="button" class="btn btn-primary" id="createCategoryButton"
                                            onclick="createCategory()">Create category</button>
                                        <button type="button" class="btn btn-primary" id="updateCategoryButton" hidden
                                            onclick="updateCategory()">Update category</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-9">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th class="col-lg-1">Name</th>
                                                <th class="col-lg-3">Description</th>
                                                <th class="col-lg-1">Status</th>
                                                <th class="col-lg-3 text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% categories.forEach(category=> { %>
                                                <tr>
                                                    <td><b>
                                                            <%= category.categoryName %>
                                                        </b></td>
                                                    <td>
                                                        <%= category.description %>
                                                    </td>
                                                    <td>
                                                        <% if (!category.isBlock) { %>
                                                            <span class="badge badge-pill badge-soft-success"
                                                                style="height: 20px; width: 60px;"
                                                                id="unlist-status-<%= category.id %>">Listed</span>
                                                            <% } else { %>
                                                                <span class="badge badge-pill badge-soft-danger"
                                                                    style="height: 20px; width: 60px;"
                                                                    id="unlist-status-<%= category.id %>">Unlisted</span>
                                                                <% } %>
                                                    </td>
                                                    <td class="text-center">
                                                        <% if (!category.isBlock) { %>
                                                            <button class="btn btn-outline-danger btn-sm justify-content-center"
                                                                style="height: 31px; width: 80px;"
                                                                onclick="unlistCategory('<%= category.id %>')"
                                                                id="unlist-button-<%= category.id %>">
                                                                <i class="fas fa-ban"></i> Unlist
                                                            </button>
                                                            <% } else { %>
                                                                <button class="btn btn-brand btn-sm justify-content-center"
                                                                    style="height: 31px; width: 80px;"
                                                                    onclick="unlistCategory('<%= category.id %>')"
                                                                    id="unlist-button-<%= category.id %>">
                                                                    <i class="fas fa-check"></i> List
                                                                </button>
                                                                <% } %>
                                                                    <button class="btn btn-brand btn-sm ms-2"
                                                                        data-id="<%= category.id %>"
                                                                        data-name="<%= category.categoryName %>"
                                                                        data-description="<%= category.description %>"
                                                                        onclick="editCategory(this)">
                                                                        <i class="fas fa-edit"></i> Edit info
                                                                    </button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- .col// -->
                        </div>
                        <!-- .row // -->
                    </div>
                    <!-- card body .// -->
                </div>
                <!-- card .// -->
