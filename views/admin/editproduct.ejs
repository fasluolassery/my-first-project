                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>2. Pricing</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Price in INR</label>
                                            <div id="errorMessagesPrice" class="text-danger"></div>
                                            <input type="text" id="productPrice" placeholder="â‚¹00.0"
                                                class="form-control" value="<%= product.price %>">
                                        </div>
                                    </div>
                                </div>
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>3. Category</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">


                                            <% if(categories.length> 0) { %>
                                                <% categories.forEach(category=> { %>
                                                    <label class="mb-2 form-check form-check-inline"
                                                        style="width: 45%;">
                                                        <input class="form-check-input" name="mycategory" type="radio"
                                                            value="<%= category.categoryName %>" <% if
                                                            (category.categoryName===product.category) { %>checked<% } %>
